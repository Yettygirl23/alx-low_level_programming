#include "3-calc.h"

/**
 * op_add - Addition of an inputted integer to another
 *
 * @a: int to be added
 * @b: int to be added
 *
 * Return: (int) result of calculation
 */

int op_add(int a, int b)
{
	return (a + b);
}

/**
 * op_sub - Subtraction of an inputted integer from another
 *
 * @a: int to be subtracted
 * @b: int to be subtracted
 *
 * Return: (int) result of calculation
 */

int op_sub(int a, int b)
{
	return (a - b);
}

/**
 * op_mul - Multiplication of an inputted integer by another
 *
 * @a: int to be multiplied
 * @b: int to be multiplied
 *
 * Return: (int) result of calculation
 */

int op_mul(int a, int b)
{
	return (a * b);
}

/**
 * op_div - Division of an inputted integer by another
 *
 * @a: int to be divided
 * @b: int to be divided
 *
 * Return: (int) result of calculation
 */

int op_div(int a, int b)
{
	return (a / b);
}

/**
 * op_mod - Gets modulo of an inputted integer against another
 *
 * @a: int to be moduled
 * @b: int to get modulo
 *
 * Return: (int) result of calculation
 */

int op_mod(int a, int b)
{
	return (a % b);
}
